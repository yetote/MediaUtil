<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/layout_choose_file_path_et"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:hint="@string/yuv_edit_hint"
        android:maxLines="1"
        android:paddingStart="5dp"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/layout_choose_file_choose_btn"
        app:layout_constraintEnd_toStartOf="@+id/layout_choose_file_choose_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/layout_choose_file_choose_btn"
        android:layout_width="66dp"
        android:layout_height="32dp"
        android:background="@color/mediumseagreen"
        android:text="@string/choose"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>